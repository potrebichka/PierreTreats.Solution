@model PierreSweets.Models.Treat

<h2>Are you sure you want to delete this treat?</h2>

<h3>@Html.DisplayNameFor(model => model.Name): @Html.DisplayFor(model => model.Name)</h3>
@using (Html.BeginForm())
{
    <input type="submit" value="Delete" class="btn btn-danger"/>
}

<hr/>
<h3>@Html.ActionLink("Back to treat", "Details", new {id = Model.TreatId}, new { @class = "tab" } )</h3>
<h3>@Html.ActionLink("Back to list of treats", "Index", null, null, new { @class = "tab" } )</h3>