@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome to Pierre's Sweet and Savory Treats</h1>


@using System.Security.Claims

<h2>@Html.ActionLink("See list of treats", "Index", "Treats", null, new {@class = "tab" })</h2>
<h2>@Html.ActionLink("See list of flavors", "Index", "Flavors", null, new {@class = "tab" })</h2>

@if (!User.Identity.IsAuthenticated)
{
    <h2>@Html.ActionLink("Register", "Register", "Account", null, new {@class = "tab" })</h2>
    <h2>@Html.ActionLink("Log in", "Login", "Account", null, new {@class = "tab" })</h2>
}
else
{
    <h2>@Html.ActionLink("View Orders", "Index", "Orders", null, new {@class = "tab" })</h2>
}

</div>